<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="org.ironman.ticketsellingsystem.MainActivity">

    <include layout="@layout/content_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Iron Man Ticket Selling"
            android:textSize="20sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@mipmap/my_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="火车售票"
            android:textSize="20sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/item_shape_statistics"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/login_input_yhm_pre"
                android:hint="请输入账号" />

            <EditText
                android:id="@+id/et_password"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/login_input_mm_pre"
                android:hint="请输入密码"
                android:inputType="textPassword" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp">

            <TextView
                android:id="@+id/tv_rigister"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="注册新用户" />

            <TextView
                android:id="@+id/tv_forget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="忘记密码？" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_login"
            style="@style/ButtonStyle"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:text="登录" />
    </LinearLayout>

</LinearLayout>
