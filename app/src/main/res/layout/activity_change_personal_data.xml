<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.ironman.ticketsellingsystem.ui.activity.ChangePersonalDataActivity">

    <include layout="@layout/content_toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout style="@style/PersonalDataRelativeLayoutStyleContainer">

                <TextView
                    style="@style/PersonalDataTextViewStyleLeft"
                    android:text="姓名" />

                <TextView
                    android:id="@+id/tv_userName"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:text="" />


            </RelativeLayout>

            <RelativeLayout style="@style/PersonalDataRelativeLayoutStyleContainer">

                <TextView
                    style="@style/PersonalDataTextViewStyleLeft"
                    android:text="账户" />

                <TextView
                    android:id="@+id/tv_loginName"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:text="" />

            </RelativeLayout>

            <RelativeLayout
                style="@style/PersonalDataRelativeLayoutStyleContainer"
                android:layout_marginTop="8dp">

                <TextView
                    style="@style/PersonalDataTextViewStyleLeft"
                    android:text="性别" />

                <TextView
                    android:id="@+id/tv_sex"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:text="" />

                <EditText
                    android:id="@+id/et_sex"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:background="@null"
                    android:visibility="invisible" />
            </RelativeLayout>



            <RelativeLayout style="@style/PersonalDataRelativeLayoutStyleContainer">

                <TextView
                    style="@style/PersonalDataTextViewStyleLeft"
                    android:text="年龄" />

                <TextView
                    android:id="@+id/tv_age"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:minLines="3"
                    android:text="" />

                <EditText
                    android:id="@+id/et_age"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:background="@null"
                    android:visibility="invisible" />
            </RelativeLayout>





            <RelativeLayout style="@style/PersonalDataRelativeLayoutStyleContainer">

                <TextView
                    style="@style/PersonalDataTextViewStyleLeft"
                    android:text="联系电话" />

                <TextView
                    android:id="@+id/tv_phone"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:text="" />

                <EditText
                    android:id="@+id/et_phone"
                    style="@style/PersonalDataTextViewStyleRight"
                    android:background="@null"
                    android:visibility="invisible" />
            </RelativeLayout>

            <Button
                android:id="@+id/btn_commit"
                android:layout_width="200dp"
                android:layout_height="32dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#eba600"
                android:text="确定"
                android:textColor="#ffffff"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
