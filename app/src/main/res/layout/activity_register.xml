<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_bg"
    android:orientation="vertical"
    tools:context="org.ironman.ticketsellingsystem.ui.activity.RegisterActivity">

    <include layout="@layout/content_toolbar"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/item_shape_statistics"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_account"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/lg_password"
                android:hint="请输入账号" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <EditText
                android:id="@+id/et_name"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/lg_password"
                android:hint="请输入姓名" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />
            <EditText
                android:id="@+id/et_phone"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/lg_password"
                android:inputType="phone"
                android:hint="请输入手机号码" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <EditText
                android:id="@+id/et_password"
                style="@style/EditTextStyle"
                android:inputType="textPassword"
                android:drawableLeft="@mipmap/lg_password"
                android:hint="请输入密码" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <EditText
                android:id="@+id/et_check_password"
                style="@style/EditTextStyle"
                android:drawableLeft="@mipmap/lg_check"
                android:inputType="textPassword"
                android:hint="请确认密码" />

            <View
                style="@style/LineStyle"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp" />

            <RelativeLayout
                style="@style/EditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/lg_check"
                    android:drawablePadding="12dp"
                    android:text="性别："
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/sp_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:entries="@array/userSex" />
            </RelativeLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tv_register"
            style="@style/ButtonStyle"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:text="注册" />
    </LinearLayout>

</LinearLayout>
